<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatisticsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:background="@drawable/rectangle"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/viewprofile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="customers"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/customers"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:background="@drawable/rectangle"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/statistics"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="suvidha centre"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"
             />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/suvidha_centre"

                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:background="@drawable/rectangle"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/viewprofile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="distributor"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/distributor"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:background="@drawable/rectangle"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/addbooking"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="super distributor"
                android:textColor="#000"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/super_distributor"

                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>